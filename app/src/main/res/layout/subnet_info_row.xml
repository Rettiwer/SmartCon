<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    android:layout_marginEnd="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="0dp"
    android:background="#FAFAFA"
    android:elevation="6dp"
    android:padding="16dp"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/subnet_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto"
        android:text="PodsieÄ‡ #1"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="false"
        android:layout_below="@id/subnet_id"
        android:background="@color/divider"
        android:clipToPadding="false"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/subnet_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/div1"
        android:layout_below="@id/div1"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto"
        android:text="Adres podsieci"
        android:textColor="@color/textPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/subnet_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/div1"
        android:layout_below="@id/div1"
        android:layout_marginBottom="5dp"
        android:text="192.168.1.0"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/subnet_address_title"
        android:background="@color/divider"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/first_host_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subnet_address_title"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto"
        android:text="Pierwszy host"
        android:textColor="@color/textPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/first_host_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/first_host_address_title"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/first_host_address_title"
        android:layout_below="@id/subnet_adress"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="192.168.1.255"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/first_host_address"
        android:background="@color/divider"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/last_host_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/first_host_address"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto"
        android:text="Ostatni host"
        android:textColor="@color/textPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/last_host_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/last_host_address_title"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/last_host_address_title"
        android:layout_below="@id/first_host_address"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="254"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/last_host_address_title"
        android:background="@color/divider"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/subnet_broadcast_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/last_host_address_title"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto"
        android:text="Adres broadcast"
        android:textColor="@color/textPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/subnet_broadcast_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/subnets_amount_title"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/subnets_amount_title"
        android:layout_below="@id/last_host_address"
        android:layout_marginTop="5dp"
        android:text="254"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>